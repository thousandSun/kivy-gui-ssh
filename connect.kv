ConnectBox:

<ConnectBox>:
    Label:
        text: "Hostname"
        pos_hint: {"x": .05, "y": .85}
        size_hint: None, None
        height: "35dp"
        width: "80dp"
    TextInput:
        id: hostname
        multiline: False
        pos_hint: {"x": .25, "y": .85}
        size_hint: None, None
        height: "35dp"
        width: "370dp"

    Label:
        text: "Port"
        pos_hint: {"x": .05, "y": .72}
        size_hint: None, None
        height: "35dp"
        width: "80dp"
    TextInput:
        id: port
        multiline: False
        pos_hint: {"x": .25, "y": .72}
        size_hint: None, None
        height: "35dp"
        width: "370dp"
        input_filter: "int"
        
    Label:
        text: "Username"
        pos_hint: {"x": .05, "y": .59}
        size_hint: None, None
        height: "35dp"
        width: "80dp"
    TextInput:
        id: username
        multiline: False
        pos_hint: {"x": .25, "y": .59}
        size_hint: None, None
        height: "35dp"
        width: "370dp"

    Label:
        text: "Password"
        pos_hint: {"x": .05, "y": .46}
        size_hint: None, None
        height: "35dp"
        width: "80dp"
    TextInput:
        id: password
        multiline: False
        pos_hint: {"x": .25, "y": .46}
        size_hint: None, None
        height: "35dp"
        width: "370dp"

    Label:
        id: error_label
        pos_hint: {"x": .05, "y": .3}
        size_hint: 1, None
        height: "35dp"
        text_size: root.width -(root.width*.1), None

    Button:
        text: "Clear..."
        pos_hint: {"x": .05, "y": .15}
        size_hint: None, None
        width: "150dp"
        height: "40dp"
        on_press: root.clear_fields()
    Button:
        text: "Connect..."
        pos_hint: {"x": .36, "y": .15}
        size_hint: None, None
        width: "150dp"
        height: "40dp"
        on_press: root.connect()
    Button:
        text: "Exit..."
        pos_hint: {"x": .67, "y": .15}
        size_hint: None, None
        width: "150dp"
        height: "40dp"
        on_release: root.close_application()